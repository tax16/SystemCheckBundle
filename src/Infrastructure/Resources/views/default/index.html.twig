{% extends '@SystemCheckBundle/base.html.twig' %}

{% block title %}System Check bundle{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/systemcheck/css/card.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/systemcheck/css/drop-down.css') }}">
{% endblock %}

{% block body %}
    <div class="card-container text-align">
        <div class="card-grid">
            <article class="card">
                {% include '@SystemCheckBundle/component/card.html.twig' with {
                    'check': successChecks,
                    'status': 'success'
                } %}
            </article>
            <article class="card">
                {% include '@SystemCheckBundle/component/card.html.twig' with {
                    'check': failedChecks,
                    'status': 'failed'
                } %}
            </article>
            <article class="card">
                {% include '@SystemCheckBundle/component/card.html.twig' with {
                    'check': warningChecks,
                    'status': 'warning'
                } %}
            </article>
        </div>
        <div class="responsive-container">
            <div class="component-wrapper">
                {% include '@SystemCheckBundle/component/pie-graph.html.twig' %}
            </div>
            <div class="component-wrapper">
                <div class="network-nodes-dashboard">
                    {% include '@SystemCheckBundle/component/node.html.twig' with {
                        networkData: networkData
                    } %}
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/systemcheck/js/drop-down.js') }}"></script>
{% endblock %}
<article class="card">
    <div class="card-header">
        <div>
            <span><img src="{{ check.icon }}"/></span>
            <h3>{{ check.result.name }}</h3>
        </div>

        <label class="toggle">
            <input type="checkbox" disabled {{ check.result.isSuccess ? 'checked' : '' }}>
            <span></span>
        </label>
    </div>
    <div class="card-body">
        <p>{{ check.description }}</p>
    </div>
    <div class="card-footer">
        <a >Priority: <b>{{ check.priority }}</b> </a> &nbsp;|&nbsp;
        <a href="{{ path('system_details') }}">View integration</a>
    </div>
</article>
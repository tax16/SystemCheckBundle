<article class="card">
    <div class="card-header">
        <div>
            <span><img src="{{ asset('bundles/systemcheck/images/icon/' ~ check.icon) }}" alt="{{ check.result.name }} icon"/></span>
        </div>
        <label class="toggle">
            <input type="checkbox" disabled {{ check.result.isSuccess ? 'checked' : '' }}>
            <span></span>
        </label>
    </div>

    <h3 class="card-title">{{ check.label }}</h3>
    <div class="card-body">
        <p>{{ check.description }}</p>
    </div>
    <div class="card-footer">
        <a >Priority: <b>{{ check.priority }}</b> </a> &nbsp;|&nbsp;
        <a href="#" data-dialog-open="dialog-{{ check.label }}">View detail</a>
    </div>
</article>